{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "sourceMap": true
  },
  "include": ["src"]
}
